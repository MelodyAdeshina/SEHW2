<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>New Recipe</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <style>
    main {
      max-width: 900px;
      margin: 0 auto;
      padding: 40px 20px;
      font-family: Arial, sans-serif;
    }

    h1 {
      font-size: 2em;
      margin-bottom: 10px;
    }

    .form-container {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .form-container label {
      font-weight: bold;
    }

    .form-container input,
    .form-container select,
    .form-container textarea {
      padding: 10px;
      font-size: 1em;
      border-radius: 5px;
      border: 1px solid #ccc;
      width: 100%;
    }

    .form-container textarea {
      resize: vertical;
    }

    .form-container .submit-button {
      padding: 12px 20px;
      background-color: purple;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 1.1em;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .form-container .submit-button:hover {
      background-color: darkviolet;
    }

    .back-button {
      margin-top: 30px;
      padding: 10px 20px;
      background-color: purple; /* Button color */
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 1em;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .back-button:hover {
      background-color: darkviolet;
      transform: scale(1.05); 
    }

  </style>
</head>
<body>
  <%- include('partials/header') %>

  <main>
    <h1>New Recipe</h1>

    <form action="/addrecipe" method="POST" class="form-container">
      <label for="name">Recipe Name:</label>
      <input type="text" name="name" id="name" placeholder="Enter recipe name" required />

      <label for="protein_type">Recipe Type:</label>
      <select name="protein_type" id="protein_type" required>
        <option value="" disabled selected>Select Protein Type</option>
        <% proteinTypes.forEach(protein => { %>
          <option value="<%= protein %>"><%= protein %></option>
        <% }) %>
      </select>

      <label for="ingredient_id">Ingredients:</label>
      <select name="ingredient_id" id="ingredient_id">
        <option value="" disabled selected>Select an ingredient</option>
        <% ingredients.forEach(ingredient => { %>
          <option value="<%= ingredient.id %>"><%= ingredient.name %></option>
        <% }) %>
      </select>

      <label for="new_ingredient">Another Ingredient:</label>
      <input type="text" name="new_ingredient" id="new_ingredient" placeholder="Enter new ingredient (if any)" />

      <label for="instructions">Instructions:</label>
      <textarea name="instructions" id="instructions" placeholder="Enter the recipe instructions" required></textarea>

      <button type="submit" class="submit-button">Submit Recipe</button>
    </form>

    <a href="/"><button class="back-button">Back to Home</button></a>
  </main>

</body>
</html>

