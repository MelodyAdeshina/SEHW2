<%- include('partials/header') %>

<main>
  <h1>Recipes</h1>
  <p>Here are some of my favorite recipes!</p>
  
  <% recipes.forEach(recipe => { %>
    <div class="recipe">
      <h2><%= recipe.name %></h2>
      <p><%= recipe.description %></p>
      <p><strong>Protein Type:</strong> <%= recipe.protein_type %></p>
      
      <h3>Ingredients:</h3>
      <ul>
        <% recipe.ingredients.forEach(ingredient => { %>
          <li>
            <span class="ingredient-name" title="<%= ingredient.hover_info %>"><%= ingredient.name %></span>
          </li>
        <% }); %>
      </ul>
      
      <a href="/recipes/<%= recipe.id %>" class="btn">View Recipe</a>
    </div>
  <% }); %>
</main>

<%- include('partials/footer') %>

